@model SistemaPermisos.Models.PaginatedList<SistemaPermisos.Models.AuditLog>

@{
    ViewData["Title"] = "Mi Actividad";
}

<div class="container mt-4">
    <h2 class="mb-4">Mi Actividad Reciente</h2>

    <div class="card">
        <div class="card-header">
            Registro de Actividad
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <p class="text-center">No hay actividad registrada para mostrar.</p>
            }
            else
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Acción</th>
                            <th>Detalles</th>
                            <th>Fecha y Hora</th>
                            <th>Dirección IP</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Accion)</td>
                                <td>@Html.DisplayFor(modelItem => item.Detalles)</td>
                                <td>@item.FechaHora.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td>@Html.DisplayFor(modelItem => item.IpAddress)</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Activity" asp-route-pageNumber="@(Model.PageIndex - 1)">Anterior</a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                <a class="page-link" asp-action="Activity" asp-route-pageNumber="@i">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Activity" asp-route-pageNumber="@(Model.PageIndex + 1)">Siguiente</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
