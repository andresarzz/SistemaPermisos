@model SistemaPermisos.ViewModels.SupervisorDashboardViewModel

@{
    ViewData["Title"] = "Panel de Supervisor";
}

<div class="container mt-4">
    <h2 class="mb-4">Panel de Supervisor</h2>

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Permisos Pendientes</h5>
                    <p class="card-text display-4">@Model.TotalPermisosPendientes</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Omisiones Pendientes</h5>
                    <p class="card-text display-4">@Model.TotalOmisionesPendientes</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">Reportes de Daño Pendientes</h5>
                    <p class="card-text display-4">@Model.TotalReportesPendientes</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Últimos Permisos Pendientes
                </div>
                <div class="card-body">
                    @if (!Model.PermisosPendientes.Any())
                    {
                        <p class="text-center">No hay permisos pendientes.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Usuario</th>
                                        <th>Tipo</th>
                                        <th>Fecha Solicitud</th>
                                        <th>Acción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var permiso in Model.PermisosPendientes)
                                    {
                                        <tr>
                                            <td>@permiso.Usuario?.NombreUsuario</td>
                                            <td>@permiso.TipoPermiso</td>
                                            <td>@permiso.FechaSolicitud.ToString("dd/MM/yyyy")</td>
                                            <td><a asp-controller="Permisos" asp-action="Resolve" asp-route-id="@permiso.Id" class="btn btn-sm btn-primary">Resolver</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="card-footer text-right">
                    <a asp-controller="Permisos" asp-action="Index" class="btn btn-outline-primary">Ver Todos los Permisos</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Últimas Omisiones Pendientes
                </div>
                <div class="card-body">
                    @if (!Model.OmisionesPendientes.Any())
                    {
                        <p class="text-center">No hay omisiones pendientes.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Usuario</th>
                                        <th>Tipo</th>
                                        <th>Fecha Omisión</th>
                                        <th>Acción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var omision in Model.OmisionesPendientes)
                                    {
                                        <tr>
                                            <td>@omision.Usuario?.NombreUsuario</td>
                                            <td>@omision.TipoOmision</td>
                                            <td>@omision.FechaOmision.ToString("dd/MM/yyyy")</td>
                                            <td><a asp-controller="Omisiones" asp-action="Resolve" asp-route-id="@omision.Id" class="btn btn-sm btn-primary">Resolver</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="card-footer text-right">
                    <a asp-controller="Omisiones" asp-action="Index" class="btn btn-outline-info">Ver Todas las Omisiones</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Últimos Reportes de Daño Pendientes
                </div>
                <div class="card-body">
                    @if (!Model.ReportesPendientes.Any())
                    {
                        <p class="text-center">No hay reportes de daño pendientes.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Usuario</th>
                                        <th>Tipo Daño</th>
                                        <th>Equipo</th>
                                        <th>Fecha Reporte</th>
                                        <th>Acción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var reporte in Model.ReportesPendientes)
                                    {
                                        <tr>
                                            <td>@reporte.Usuario?.NombreUsuario</td>
                                            <td>@reporte.TipoDano</td>
                                            <td>@reporte.Equipo</td>
                                            <td>@reporte.FechaReporte.ToString("dd/MM/yyyy")</td>
                                            <td><a asp-controller="Reportes" asp-action="Resolve" asp-route-id="@reporte.Id" class="btn btn-sm btn-primary">Resolver</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="card-footer text-right">
                    <a asp-controller="Reportes" asp-action="Index" class="btn btn-outline-danger">Ver Todos los Reportes</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            Actividad Reciente del Sistema
        </div>
        <div class="card-body">
            @if (!Model.ActividadReciente.Any())
            {
                <p class="text-center">No hay actividad reciente para mostrar.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Usuario</th>
                                <th>Acción</th>
                                <th>Detalles</th>
                                <th>Fecha y Hora</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model.ActividadReciente)
                            {
                                <tr>
                                    <td>@log.Usuario?.NombreUsuario</td>
                                    <td>@log.Accion</td>
                                    <td>@log.Detalles</td>
                                    <td>@log.FechaHora.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        <div class="card-footer text-right">
            <a asp-controller="Users" asp-action="AuditLog" class="btn btn-outline-info">Ver Todo el Registro de Auditoría</a>
        </div>
    </div>
</div>
