@model SistemaPermisos.ViewModels.OmisionViewModel

@{
    ViewData["Title"] = "Solicitar Omisión de Marca";
}

<div class="container mt-4">
    <h2 class="mb-4">Solicitar Nueva Omisión de Marca</h2>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    Datos de la Omisión
                </div>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="TipoOmision"></label>
                            <select asp-for="TipoOmision" class="form-control">
                                <option value="">-- Seleccione un tipo --</option>
                                <option value="Entrada">Entrada</option>
                                <option value="Salida">Salida</option>
                                <option value="Entrada y Salida">Entrada y Salida</option>
                            </select>
                            <span asp-validation-for="TipoOmision" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FechaOmision"></label>
                            <input asp-for="FechaOmision" type="date" class="form-control" />
                            <span asp-validation-for="FechaOmision" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="HoraOmision"></label>
                            <input asp-for="HoraOmision" type="time" class="form-control" />
                            <span asp-validation-for="HoraOmision" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Motivo"></label>
                            <textarea asp-for="Motivo" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Motivo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cedula"></label>
                            <input asp-for="Cedula" class="form-control" />
                            <span asp-validation-for="Cedula" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Puesto"></label>
                            <input asp-for="Puesto" class="form-control" />
                            <span asp-validation-for="Puesto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Instancia"></label>
                            <input asp-for="Instancia" class="form-control" />
                            <span asp-validation-for="Instancia" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoriaPersonal"></label>
                            <input asp-for="CategoriaPersonal" class="form-control" />
                            <span asp-validation-for="CategoriaPersonal" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Titulo"></label>
                            <input asp-for="Titulo" class="form-control" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Evidencia"></label>
                            <div class="custom-file">
                                <input asp-for="Evidencia" type="file" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile">Seleccionar archivo...</label>
                            </div>
                            <span asp-validation-for="Evidencia" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">Solicitar Omisión</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var customFileInput = document.getElementById('customFile');
                if (customFileInput) {
                    customFileInput.addEventListener('change', function (e) {
                        var fileName = e.target.files[0].name;
                        var label = e.target.nextElementSibling;
                        label.innerText = fileName;
                    });
                }
            });
        </script>
}
