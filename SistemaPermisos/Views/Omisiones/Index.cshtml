@model IEnumerable<SistemaPermisos.Models.OmisionMarca>

@{
    ViewData["Title"] = "Omisiones de Marca";
    var esAdmin = Context.Session.GetString("UsuarioRol") == "Admin";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>
            <i class="fas fa-clock text-warning"></i>
            Omisiones de Marca
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nueva Omisión
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha Registro</th>
                                @if (esAdmin)
                                {
                                    <th>Usuario</th>
                                }
                                <th>Tipo Omisión</th>
                                <th>Fecha Omisión</th>
                                <th>Estado</th>
                                <th style="width: 200px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                                    @if (esAdmin)
                                    {
                                        <td>@item.Usuario?.Nombre</td>
                                    }
                                    <td>@item.TipoOmision</td>
                                    <td>@item.FechaOmision.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @switch (item.Estado)
                                        {
                                            case "Pendiente":
                                                <span class="badge bg-warning">Pendiente</span>
                                                break;
                                            case "Aprobado":
                                                <span class="badge bg-success">Aprobado</span>
                                                break;
                                            case "Rechazado":
                                                <span class="badge bg-danger">Rechazado</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@item.Estado</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex flex-wrap gap-1">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Ver detalles de la omisión">
                                                <i class="fas fa-eye"></i> Detalles
                                            </a>
                                            @if (esAdmin && item.Estado == "Pendiente")
                                            {
                                                <a asp-action="Resolve" asp-route-id="@item.Id" class="btn btn-success btn-sm" title="Resolver omisión">
                                                    <i class="fas fa-check"></i> Resolver
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-clock fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No hay omisiones registradas</h4>
                    <p class="text-muted">Cuando se registren omisiones, aparecerán aquí.</p>
                </div>
            }
        </div>
    </div>
</div>
