@model SistemaPermisos.ViewModels.ResolucionOmisionViewModel

@{
    ViewData["Title"] = "Resolver Omisión";
    var omision = ViewBag.Omision as SistemaPermisos.Models.OmisionMarca;
}

<div class="container mt-4">
    <h2 class="mb-4">Resolver Omisión de Marca</h2>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    Resolución de Omisión #@Model.OmisionId
                </div>
                <div class="card-body">
                    @if (omision != null)
                    {
                        <div class="card mb-4">
                            <div class="card-header bg-info text-white">
                                <i class="fas fa-info-circle mr-1"></i>
                                Detalles de la Omisión
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-3">Solicitante:</dt>
                                    <dd class="col-sm-9">@omision.Usuario?.Nombre</dd>

                                    <dt class="col-sm-3">Fecha de Omisión:</dt>
                                    <dd class="col-sm-9">@omision.FechaOmision.ToShortDateString()</dd>

                                    <dt class="col-sm-3">Hora de Omisión:</dt>
                                    <dd class="col-sm-9">@omision.HoraOmision.ToString(@"hh\:mm")</dd>

                                    <dt class="col-sm-3">Tipo de Omisión:</dt>
                                    <dd class="col-sm-9">@omision.TipoOmision</dd>

                                    <dt class="col-sm-3">Motivo:</dt>
                                    <dd class="col-sm-9">@omision.Motivo</dd>

                                    <dt class="col-sm-3">Estado Actual:</dt>
                                    <dd class="col-sm-9">
                                        <span class="badge @(omision.Estado == "Pendiente" ? "badge-warning" : omision.Estado == "Aprobado" ? "badge-success" : "badge-danger")">
                                            @omision.Estado
                                        </span>
                                    </dd>
                                    <dt class="col-sm-3">Fecha Solicitud:</dt>
                                    <dd class="col-sm-9">@omision.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")</dd>
                                </dl>
                            </div>
                        </div>
                    }

                    <form asp-action="Resolve">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="OmisionId" />

                        <div class="form-group">
                            <label asp-for="NuevoEstado"></label>
                            <select asp-for="NuevoEstado" class="form-control">
                                <option value="">-- Seleccione un estado --</option>
                                <option value="Aprobado">Aprobado</option>
                                <option value="Rechazado">Rechazado</option>
                                <option value="Pendiente">Pendiente</option>
                            </select>
                            <span asp-validation-for="NuevoEstado" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ComentariosAprobador"></label>
                            <textarea asp-for="ComentariosAprobador" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="ComentariosAprobador" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">Guardar Resolución</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
