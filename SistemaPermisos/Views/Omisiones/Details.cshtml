@model SistemaPermisos.Models.OmisionMarca

@{
    ViewData["Title"] = "Detalles de Omisión";
}

<div class="container mt-4">
    <h2 class="mb-4">Detalles de Omisión de Marca</h2>

    <div class="card">
        <div class="card-header">
            Información de la Omisión #@Model.Id
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Usuario</dt>
                <dd class="col-sm-9">@Model.Usuario?.Nombre @Model.Usuario?.Apellidos (@Model.Usuario?.NombreUsuario)</dd>

                <dt class="col-sm-3">Tipo de Omisión</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoOmision)</dd>

                <dt class="col-sm-3">Fecha de Omisión</dt>
                <dd class="col-sm-9">@Model.FechaOmision.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Hora de Omisión</dt>
                <dd class="col-sm-9">@Model.HoraOmision.ToString(@"hh\:mm")</dd>

                <dt class="col-sm-3">Motivo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Motivo)</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>

                <dt class="col-sm-3">Fecha de Solicitud</dt>
                <dd class="col-sm-9">@Model.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")</dd>

                @if (!string.IsNullOrEmpty(Model.Cedula))
                {
                    <dt class="col-sm-3">Cédula</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Cedula)</dd>
                }
                @if (!string.IsNullOrEmpty(Model.Puesto))
                {
                    <dt class="col-sm-3">Puesto</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Puesto)</dd>
                }
                @if (!string.IsNullOrEmpty(Model.Instancia))
                {
                    <dt class="col-sm-3">Instancia</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Instancia)</dd>
                }
                @if (!string.IsNullOrEmpty(Model.CategoriaPersonal))
                {
                    <dt class="col-sm-3">Categoría Personal</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoriaPersonal)</dd>
                }
                @if (!string.IsNullOrEmpty(Model.Titulo))
                {
                    <dt class="col-sm-3">Título</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Titulo)</dd>
                }

                @if (!string.IsNullOrEmpty(Model.RutaEvidencia))
                {
                    <dt class="col-sm-3">Evidencia</dt>
                    <dd class="col-sm-9">
                        <a href="@Model.RutaEvidencia" target="_blank">Ver Evidencia</a>
                    </dd>
                }

                @if (Model.AprobadoPor != null)
                {
                    <dt class="col-sm-3">Aprobado/Rechazado Por</dt>
                    <dd class="col-sm-9">@Model.AprobadoPor.Nombre @Model.AprobadoPor.Apellidos (@Model.AprobadoPor.NombreUsuario)</dd>
                }
                @if (Model.FechaResolucion.HasValue)
                {
                    <dt class="col-sm-3">Fecha de Resolución</dt>
                    <dd class="col-sm-9">@Model.FechaResolucion.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                }
                @if (!string.IsNullOrEmpty(Model.ComentariosAprobador))
                {
                    <dt class="col-sm-3">Comentarios del Aprobador</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.ComentariosAprobador)</dd>
                }
            </dl>
        </div>
        <div class="card-footer text-right">
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
            {
                @if (Model.Estado == "Pendiente")
                {
                    <a asp-action="Resolve" asp-route-id="@Model.Id" class="btn btn-primary">Resolver Omisión</a>
                }
            }
        </div>
    </div>
</div>
