@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido al Sistema de Gestión de Permisos</h1>
    <p>Una solución integral para la administración de permisos, omisiones de marca y reportes de daño.</p>
    <img src="~/images/logo.png" alt="Logo del Sistema" class="img-fluid" style="max-width: 300px; margin-top: 20px;" />

    @if (!User.Identity!.IsAuthenticated)
    {
        <div class="mt-4">
            <p>Por favor, <a asp-controller="Account" asp-action="Login">inicie sesión</a> para acceder a las funcionalidades del sistema.</p>
            <p>¿No tiene una cuenta? <a asp-controller="Account" asp-action="Register">Regístrese aquí</a>.</p>
        </div>
    }
    else
    {
        <div class="mt-4">
            <p>Ha iniciado sesión como <strong>@User.Identity.Name</strong> con el rol de <strong>@User.FindFirstValue(System.Security.Claims.ClaimTypes.Role)</strong>.</p>
            <p>Explore las opciones disponibles en el menú de navegación.</p>

            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-primary btn-lg mt-3">Ir al Panel de Administración</a>
            }
            else if (User.IsInRole("Supervisor"))
            {
                <a asp-controller="Supervisor" asp-action="Dashboard" class="btn btn-primary btn-lg mt-3">Ir al Panel de Supervisor</a>
            }
            else if (User.IsInRole("Docente"))
            {
                <a asp-controller="Docente" asp-action="Dashboard" class="btn btn-primary btn-lg mt-3">Ir al Panel de Docente</a>
            }
        </div>
    }
</div>
