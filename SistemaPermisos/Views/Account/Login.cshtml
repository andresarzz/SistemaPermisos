@model SistemaPermisos.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_LayoutLogin";
}

<div class="card shadow-sm">
    <div class="card-header text-center">
        <img src="~/images/logo.png" alt="Logo" class="login-logo" />
        <h4>Iniciar Sesión</h4>
    </div>
    <div class="card-body">
        <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UsernameOrEmail"></label>
                <input asp-for="UsernameOrEmail" class="form-control" />
                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary btn-block w-100">Iniciar Sesión</button>
            </div>
        </form>
        <div class="text-center mt-3">
            <p><a asp-action="ForgotPassword">¿Olvidó su contraseña?</a></p>
            <p>¿No tiene una cuenta? <a asp-action="Register">Regístrese aquí</a>.</p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
