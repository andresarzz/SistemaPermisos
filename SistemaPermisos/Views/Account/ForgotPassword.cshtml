@model SistemaPermisos.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Olvidé mi Contraseña";
    Layout = "_LayoutLogin";
}

<div class="card shadow-sm">
    <div class="card-header text-center">
        <h4>Restablecer Contraseña</h4>
    </div>
    <div class="card-body">
        <p class="text-center">Ingrese su correo electrónico y le enviaremos un enlace para restablecer su contraseña.</p>
        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary btn-block w-100">Enviar Enlace de Restablecimiento</button>
            </div>
        </form>
        <div class="text-center mt-3">
            <a asp-action="Login">Volver al Inicio de Sesión</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
