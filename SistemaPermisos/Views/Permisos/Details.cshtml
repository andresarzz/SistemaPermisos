@model SistemaPermisos.Models.Permiso

@{
    ViewData["Title"] = "Detalles de Permiso";
}

<div class="container mt-4">
    <h2 class="mb-4">Detalles de Permiso</h2>

    <div class="card">
        <div class="card-header">
            Información del Permiso #@Model.Id
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Usuario</dt>
                <dd class="col-sm-9">@Model.Usuario?.Nombre @Model.Usuario?.Apellidos (@Model.Usuario?.NombreUsuario)</dd>

                <dt class="col-sm-3">Tipo de Permiso</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoPermiso)</dd>

                <dt class="col-sm-3">Fecha de Inicio</dt>
                <dd class="col-sm-9">@Model.FechaInicio.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Fecha de Fin</dt>
                <dd class="col-sm-9">@Model.FechaFin.ToString("dd/MM/yyyy")</dd>

                @if (Model.HoraDesde.HasValue)
                {
                    <dt class="col-sm-3">Hora Desde</dt>
                    <dd class="col-sm-9">@Model.HoraDesde.Value.ToString(@"hh\:mm")</dd>
                }
                @if (Model.HoraHasta.HasValue)
                {
                    <dt class="col-sm-3">Hora Hasta</dt>
                    <dd class="col-sm-9">@Model.HoraHasta.Value.ToString(@"hh\:mm")</dd>
                }

                <dt class="col-sm-3">Jornada Completa</dt>
                <dd class="col-sm-9">@(Model.JornadaCompleta ? "Sí" : "No")</dd>

                <dt class="col-sm-3">Media Jornada</dt>
                <dd class="col-sm-9">@(Model.MediaJornada ? "Sí" : "No")</dd>

                @if (Model.CantidadLecciones.HasValue)
                {
                    <dt class="col-sm-3">Cantidad de Lecciones</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CantidadLecciones)</dd>
                }

                @if (!string.IsNullOrEmpty(Model.Cedula))
                {
                    <dt class="col-sm-3">Cédula</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Cedula)</dd>
                }
                @if (!string.IsNullOrEmpty(Model.Puesto))
                {
                    <dt class="col-sm-3">Puesto</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Puesto)</dd>
                }
                @if (!string.IsNullOrEmpty(Model.Condicion))
                {
                    <dt class="col-sm-3">Condición</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Condicion)</dd>
                }
                @if (!string.IsNullOrEmpty(Model.TipoMotivo))
                {
                    <dt class="col-sm-3">Tipo de Motivo</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoMotivo)</dd>
                }
                @if (!string.IsNullOrEmpty(Model.TipoConvocatoria))
                {
                    <dt class="col-sm-3">Tipo de Convocatoria</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoConvocatoria)</dd>
                }

                <dt class="col-sm-3">Motivo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Motivo)</dd>

                @if (!string.IsNullOrEmpty(Model.DocumentoAdjunto))
                {
                    <dt class="col-sm-3">Documento Adjunto</dt>
                    <dd class="col-sm-9">
                        <a href="@Model.DocumentoAdjunto" target="_blank">Ver Documento</a>
                    </dd>
                }

                <dt class="col-sm-3">Fecha de Solicitud</dt>
                <dd class="col-sm-9">@Model.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>

                @if (Model.AprobadoPor != null)
                {
                    <dt class="col-sm-3">Aprobado/Rechazado Por</dt>
                    <dd class="col-sm-9">@Model.AprobadoPor.Nombre @Model.AprobadoPor.Apellidos (@Model.AprobadoPor.NombreUsuario)</dd>
                }
                @if (Model.FechaResolucion.HasValue)
                {
                    <dt class="col-sm-3">Fecha de Resolución</dt>
                    <dd class="col-sm-9">@Model.FechaResolucion.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                }
                @if (!string.IsNullOrEmpty(Model.ComentariosAprobador))
                {
                    <dt class="col-sm-3">Comentarios del Aprobador</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.ComentariosAprobador)</dd>
                }
                @if (!string.IsNullOrEmpty(Model.TipoRebajo))
                {
                    <dt class="col-sm-3">Tipo de Rebajo</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoRebajo)</dd>
                }
                @if (!string.IsNullOrEmpty(Model.Justificacion))
                {
                    <dt class="col-sm-3">Justificación</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Justificacion)</dd>
                }
                @if (Model.FechaJustificacion.HasValue)
                {
                    <dt class="col-sm-3">Fecha de Justificación</dt>
                    <dd class="col-sm-9">@Model.FechaJustificacion.Value.ToString("dd/MM/yyyy")</dd>
                }
            </dl>
        </div>
        <div class="card-footer text-right">
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
            {
                @if (Model.Estado == "Pendiente" || Model.Estado == "Justificado")
                {
                    <a asp-action="Resolve" asp-route-id="@Model.Id" class="btn btn-primary">Resolver Permiso</a>
                }
            }
            @if (User.FindFirstValue(ClaimTypes.NameIdentifier) == Model.UsuarioId.ToString() && (Model.Estado == "Pendiente" || Model.Estado == "Rechazado"))
            {
                <a asp-action="Justify" asp-route-id="@Model.Id" class="btn btn-info">Justificar Permiso</a>
            }
        </div>
    </div>
</div>
