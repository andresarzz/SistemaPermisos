@model SistemaPermisos.ViewModels.PermisoViewModel

@{
    ViewData["Title"] = "Solicitar Permiso";
}

<div class="container mt-4">
    <h2 class="mb-4">Solicitar Nuevo Permiso</h2>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    Datos del Permiso
                </div>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="TipoPermiso"></label>
                            <select asp-for="TipoPermiso" class="form-control">
                                <option value="">-- Seleccione un tipo --</option>
                                <option value="Vacaciones">Vacaciones</option>
                                <option value="Enfermedad">Enfermedad</option>
                                <option value="Asuntos Personales">Asuntos Personales</option>
                                <option value="Maternidad/Paternidad">Maternidad/Paternidad</option>
                                <option value="Capacitación">Capacitación</option>
                                <option value="Otro">Otro</option>
                            </select>
                            <span asp-validation-for="TipoPermiso" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FechaInicio"></label>
                            <input asp-for="FechaInicio" type="date" class="form-control" />
                            <span asp-validation-for="FechaInicio" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FechaFin"></label>
                            <input asp-for="FechaFin" type="date" class="form-control" />
                            <span asp-validation-for="FechaFin" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check">
                            <input class="form-check-input" asp-for="JornadaCompleta" />
                            <label class="form-check-label" asp-for="JornadaCompleta"></label>
                        </div>
                        <div class="form-group form-check">
                            <input class="form-check-input" asp-for="MediaJornada" />
                            <label class="form-check-label" asp-for="MediaJornada"></label>
                        </div>

                        <div class="form-group">
                            <label asp-for="HoraDesde"></label>
                            <input asp-for="HoraDesde" type="time" class="form-control" />
                            <span asp-validation-for="HoraDesde" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="HoraHasta"></label>
                            <input asp-for="HoraHasta" type="time" class="form-control" />
                            <span asp-validation-for="HoraHasta" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CantidadLecciones"></label>
                            <input asp-for="CantidadLecciones" type="number" class="form-control" />
                            <span asp-validation-for="CantidadLecciones" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Cedula"></label>
                            <input asp-for="Cedula" class="form-control" />
                            <span asp-validation-for="Cedula" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Puesto"></label>
                            <input asp-for="Puesto" class="form-control" />
                            <span asp-validation-for="Puesto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Condicion"></label>
                            <input asp-for="Condicion" class="form-control" />
                            <span asp-validation-for="Condicion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TipoMotivo"></label>
                            <input asp-for="TipoMotivo" class="form-control" />
                            <span asp-validation-for="TipoMotivo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TipoConvocatoria"></label>
                            <input asp-for="TipoConvocatoria" class="form-control" />
                            <span asp-validation-for="TipoConvocatoria" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Motivo"></label>
                            <textarea asp-for="Motivo" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Motivo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DocumentoAdjunto"></label>
                            <div class="custom-file">
                                <input asp-for="DocumentoAdjunto" type="file" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile">Seleccionar archivo...</label>
                            </div>
                            <span asp-validation-for="DocumentoAdjunto" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">Solicitar Permiso</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var customFileInput = document.getElementById('customFile');
                if (customFileInput) {
                    customFileInput.addEventListener('change', function (e) {
                        var fileName = e.target.files[0].name;
                        var label = e.target.nextElementSibling;
                        label.innerText = fileName;
                    });
                }
            });
        </script>
}
