@model SistemaPermisos.ViewModels.JustificarPermisoViewModel

@{
    ViewData["Title"] = "Justificar Permiso";
}

<div class="container mt-4">
    <h2 class="mb-4">Justificar Permiso</h2>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    Justificación para Permiso #@Model.PermisoId
                </div>
                <div class="card-body">
                    <form asp-action="Justify" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="PermisoId" />

                        <div class="form-group">
                            <label asp-for="Motivo"></label>
                            <textarea asp-for="Motivo" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Motivo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DocumentoJustificacion"></label>
                            <div class="custom-file">
                                <input asp-for="DocumentoJustificacion" type="file" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile">Seleccionar archivo...</label>
                            </div>
                            <span asp-validation-for="DocumentoJustificacion" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">Enviar Justificación</button>
                            <a asp-action="Details" asp-route-id="@Model.PermisoId" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var customFileInput = document.getElementById('customFile');
                if (customFileInput) {
                    customFileInput.addEventListener('change', function (e) {
                        var fileName = e.target.files[0].name;
                        var label = e.target.nextElementSibling;
                        label.innerText = fileName;
                    });
                }
            });
        </script>
}
