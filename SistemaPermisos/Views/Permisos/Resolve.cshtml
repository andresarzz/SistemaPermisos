@model SistemaPermisos.ViewModels.ResolucionPermisoViewModel

@{
    ViewData["Title"] = "Resolver Permiso";
    var permiso = ViewBag.Permiso as SistemaPermisos.Models.Permiso;
}

<div class="container mt-4">
    <h2 class="mb-4">Resolver Permiso</h2>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    Resolución del Permiso #@Model.PermisoId
                </div>
                <div class="card-body">
                    <form asp-action="Resolve">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="PermisoId" />

                        @if (permiso != null)
                        {
                            <div class="card mb-4">
                                <div class="card-header bg-info text-white">
                                    <i class="fas fa-info-circle mr-1"></i>
                                    Detalles del Permiso
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-3">Solicitante:</dt>
                                        <dd class="col-sm-9">@permiso.Usuario?.Nombre</dd>

                                        <dt class="col-sm-3">Tipo de Permiso:</dt>
                                        <dd class="col-sm-9">@permiso.TipoPermiso</dd>

                                        <dt class="col-sm-3">Fechas:</dt>
                                        <dd class="col-sm-9">@permiso.FechaInicio.ToShortDateString() - @permiso.FechaFin.ToShortDateString()</dd>

                                        @if (permiso.HoraDesde.HasValue && permiso.HoraHasta.HasValue)
                                        {
                                            <dt class="col-sm-3">Horas:</dt>
                                            <dd class="col-sm-9">@permiso.HoraDesde.Value.ToString(@"hh\:mm") - @permiso.HoraHasta.Value.ToString(@"hh\:mm")</dd>
                                        }
                                        @if (permiso.JornadaCompleta)
                                        {
                                            <dt class="col-sm-3">Jornada:</dt>
                                            <dd class="col-sm-9">Jornada Completa</dd>
                                        }
                                        @if (permiso.MediaJornada)
                                        {
                                            <dt class="col-sm-3">Jornada:</dt>
                                            <dd class="col-sm-9">Media Jornada</dd>
                                        }
                                        @if (permiso.CantidadLecciones.HasValue)
                                        {
                                            <dt class="col-sm-3">Cantidad Lecciones:</dt>
                                            <dd class="col-sm-9">@permiso.CantidadLecciones</dd>
                                        }

                                        <dt class="col-sm-3">Motivo:</dt>
                                        <dd class="col-sm-9">@permiso.Motivo</dd>

                                        <dt class="col-sm-3">Estado Actual:</dt>
                                        <dd class="col-sm-9">
                                            <span class="badge @(permiso.Estado == "Pendiente" ? "badge-warning" : permiso.Estado == "Aprobado" ? "badge-success" : "badge-danger")">
                                                @permiso.Estado
                                            </span>
                                        </dd>
                                        <dt class="col-sm-3">Fecha Solicitud:</dt>
                                        <dd class="col-sm-9">@permiso.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")</dd>
                                    </dl>
                                </div>
                            </div>
                        }

                        <div class="form-group">
                            <label asp-for="NuevoEstado"></label>
                            <select asp-for="NuevoEstado" class="form-control">
                                <option value="">-- Seleccione un estado --</option>
                                <option value="Aprobado">Aprobado</option>
                                <option value="Rechazado">Rechazado</option>
                                <option value="Pendiente">Pendiente</option>
                                <option value="Justificado">Justificado</option>
                            </select>
                            <span asp-validation-for="NuevoEstado" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ComentariosAprobador"></label>
                            <textarea asp-for="ComentariosAprobador" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="ComentariosAprobador" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TipoRebajo"></label>
                            <input asp-for="TipoRebajo" class="form-control" />
                            <span asp-validation-for="TipoRebajo" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">Guardar Resolución</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
