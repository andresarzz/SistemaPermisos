@model SistemaPermisos.ViewModels.ChangeRoleViewModel

@{
    ViewData["Title"] = "Cambiar Rol de Usuario";
}

<div class="container mt-4">
    <h2 class="mb-4">Cambiar Rol de Usuario</h2>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    Cambiar Rol para @Model.UserName
                </div>
                <div class="card-body">
                    <form asp-action="ChangeRole">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="UserId" />

                        <div class="form-group">
                            <label asp-for="NewRole"></label>
                            <select asp-for="NewRole" class="form-control">
                                @foreach (var role in ViewBag.Roles)
                                {
                                    <option value="@role" selected="@(Model.NewRole == role)">@role</option>
                                }
                            </select>
                            <span asp-validation-for="NewRole" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
