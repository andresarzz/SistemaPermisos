@model SistemaPermisos.Models.PaginatedList<SistemaPermisos.Models.AuditLog>

@{
    ViewData["Title"] = "Registro de Auditoría";
}

<div class="container mt-4">
    <h2 class="mb-4">Registro de Auditoría</h2>

    <div class="card">
        <div class="card-header">
            Actividad del Sistema
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                    <p class="text-center">No hay registros de auditoría para mostrar.</p>
            }
            else
            {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Usuario</th>
                                    <th>Acción</th>
                                    <th>Detalles</th>
                                    <th>Fecha y Hora</th>
                                    <th>Dirección IP</th>
                                    <th>User Agent</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                        <tr>
                                            <td>@item.Usuario?.NombreUsuario</td>
                                            <td>@Html.DisplayFor(modelItem => item.Accion)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Detalles)</td>
                                            <td>@item.FechaHora.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                            <td>@Html.DisplayFor(modelItem => item.IpAddress)</td>
                                            <td>@Html.DisplayFor(modelItem => item.UserAgent)</td>
                                        </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link" asp-action="AuditLog" asp-route-pageNumber="@(Model.PageIndex - 1)">Anterior</a>
                            </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                        <a class="page-link" asp-action="AuditLog" asp-route-pageNumber="@i">@i</a>
                                    </li>
                        }
                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link" asp-action="AuditLog" asp-route-pageNumber="@(Model.PageIndex + 1)">Siguiente</a>
                            </li>
                        </ul>
                    </nav>
            }
        </div>
        <div class="card-footer text-right">
            <a asp-action="Index" class="btn btn-secondary">Volver a Gestión de Usuarios</a>
        </div>
    </div>
</div>
