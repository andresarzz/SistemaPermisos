@model SistemaPermisos.ViewModels.ManagePermissionsViewModel

@{
    ViewData["Title"] = "Gestionar Permisos";
}

<div class="container mt-4">
    <h2 class="mb-4">Gestionar Permisos para @Model.UserName</h2>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    Asignar Rol
                </div>
                <div class="card-body">
                    <form asp-action="ManagePermissions">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="UserName" />

                        <div class="form-group">
                            <label asp-for="SelectedPermissions"></label>
                            <select asp-for="SelectedPermissions" class="form-control" multiple="multiple">
                                @foreach (var permission in Model.AllPermissions)
                                {
                                    <option value="@permission" selected="@(Model.UserPermissions.Contains(permission))">@permission</option>
                                }
                            </select>
                            <span asp-validation-for="SelectedPermissions" class="text-danger"></span>
                            <small class="form-text text-muted">Seleccione el rol principal para el usuario. (En esta implementaci√≥n, un usuario solo puede tener un rol a la vez).</small>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
