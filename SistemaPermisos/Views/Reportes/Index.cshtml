@model IEnumerable<SistemaPermisos.Models.ReporteDano>

@{
    ViewData["Title"] = "Reportes de Daños";
    var esAdmin = Context.Session.GetString("UsuarioRol") == "Admin";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@(esAdmin ? "Todos los Reportes de Daños" : "Mis Reportes de Daños")</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Crear Nuevo Reporte
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="table-light">
                        <tr>
                            @if (esAdmin)
                            {
                                <th>Docente</th>
                            }
                            <th>Fecha Reporte</th>
                            <th>Ubicación</th>
                            <th>Descripción</th>
                            <th>Estado</th>
                            <th style="width: 220px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @if (esAdmin)
                                {
                                    <td>@item.Usuario.Nombre</td>
                                }
                                <td>@item.FechaReporte.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.Ubicacion</td>
                                <td>@item.Descripcion</td>
                                <td>
                                    <span class="badge @(item.Estado == "Resuelto" ? "bg-success" : "bg-warning")">
                                        @item.Estado
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex flex-wrap gap-1">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Ver detalles del reporte">
                                            <i class="fas fa-eye"></i> Detalles
                                        </a>

                                        @if (esAdmin && item.Estado == "Pendiente")
                                        {
                                            <a asp-action="MarkAsResolved" asp-route-id="@item.Id" class="btn btn-success btn-sm" title="Marcar como resuelto">
                                                <i class="fas fa-check"></i> Resolver
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info mt-3">
                    <i class="fas fa-info-circle"></i> No hay reportes registrados.
                </div>
            }
        </div>
    </div>
</div>
