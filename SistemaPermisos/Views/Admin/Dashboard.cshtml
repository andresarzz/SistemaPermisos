@model SistemaPermisos.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Panel de Administración";
}

<div class="container mt-4">
    <h2 class="mb-4">Panel de Administración</h2>

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Usuarios Registrados</h5>
                    <p class="card-text display-4">@Model.TotalUsuarios</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Permisos Pendientes</h5>
                    <p class="card-text display-4">@Model.PermisosPendientes</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Omisiones Pendientes</h5>
                    <p class="card-text display-4">@Model.OmisionesPendientes</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">Reportes de Daño Pendientes</h5>
                    <p class="card-text display-4">@Model.ReportesPendientes</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Permisos Aprobados</h5>
                    <p class="card-text display-4">@Model.PermisosAprobados</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-secondary">
                <div class="card-body">
                    <h5 class="card-title">Reportes Resueltos</h5>
                    <p class="card-text display-4">@Model.ReportesResueltos</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            Actividad Reciente del Sistema
        </div>
        <div class="card-body">
            @if (!Model.ActividadReciente.Any())
            {
                <p class="text-center">No hay actividad reciente para mostrar.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Usuario</th>
                                <th>Acción</th>
                                <th>Detalles</th>
                                <th>Fecha y Hora</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model.ActividadReciente)
                            {
                                <tr>
                                    <td>@log.Usuario?.NombreUsuario</td>
                                    <td>@log.Accion</td>
                                    <td>@log.Detalles</td>
                                    <td>@log.FechaHora.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        <div class="card-footer text-right">
            <a asp-controller="Users" asp-action="AuditLog" class="btn btn-outline-info">Ver Todo el Registro de Auditoría</a>
        </div>
    </div>
</div>
